<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', users_path %></li>
  <li><%= link_to new_user_path do %>
    <i class="glyphicon glyphicon-plus"></i> New User
  <% end %></li>
</ul>

<h1>Listing Users</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <button type="button" class="btn btn-link has-popover" data-toggle="popover" title="Email" data-content="<%= user.email %>"><%= "#{user.first_name} #{user.last_name}" %></button>
        </td>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="Click to view Birth Date, Height, and Weight">
            <!-- Button trigger modal -->
            <button class="btn btn-link" data-toggle="modal" data-target="#user-<%= user.id %>-details">
              View details
            </button>

            <!-- Modal -->
            <div class="modal fade" id="user-<%= user.id %>-details" tabindex="-1" role="dialog" aria-labelledby="user-<%= user.id %>-label" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="user-<%= user.id %>-label">Details</h4>
                  </div>
                  <div class="modal-body">
                    <li>Birth date: <%= user.birth_date.strftime('%B %d, %Y') %></li>
                    <li>Height: <%= user.height %></li>
                    <li>Weight: <%= user.weight %></li>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </span>
        </td>
        <td>
          <div class="btn btn-default"><%= link_to 'Show', user %></div>
        </td>
        <td>
          <div class="btn btn-warning"><%= link_to 'Edit', edit_user_path(user) %></div>
        </td>
        <td>
          <div class="btn btn-danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
