<%= form_for([@run.user, @run]) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :occurred_at %><br>
    <div class="col-sm-10">
      <%= f.datetime_select :occurred_at, order: [:month, :day, :year, :hour, :minute], class: 'form-control' %> UTC
    </div>
  </div><br>
  <div class="field form-group">
    <%= f.label :distance %><br>
    <div class="col-sm-2">
      <%= text_field_tag :"run[distance_attributes][length]", nil, class: 'form-control' %>
    </div>
    <div class="col-sm-2">
      <%= select_tag :"run[distance_attributes][unit]", "<option>mi</option><option>km</option><option>m</option>".html_safe %>
    </div>
  </div><br><br>
  <div class="field form-group form-inline">
    <%= f.label :duration %><br>
    <div class="col-sm-10">
      <%= number_field_tag :"run[duration_attributes][hours]", nil, within: (0..60), class: 'form-control' %> :
      <%= number_field_tag :"run[duration_attributes][minutes]", nil, within: (0..60), class: 'form-control' %> :
      <%= number_field_tag :"run[duration_attributes][seconds]", nil, within: (0..60), class: 'form-control' %>
      <p class="help-block">Format: HH:MM:SS</p>
    </div><br><br><br>
  </div>
  <div class="actions form-group">
    <%= f.submit %>
  </div>
<% end %>
